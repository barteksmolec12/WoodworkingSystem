@model Data.Product

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdminArea.cshtml";
}

<form method="post" asp-action="EditProduct" enctype="multipart/form-data">
    <br />
    <div class="backgroundWhiteBorder col-md-8">
        <h5 style="font-family: monospace;color:#97734F" class="text-center"><strong>Edytowanie produktu</strong></h5>
        <br />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group row ">
            <div class="col-md-5">
                <div class="text-right">
                    <label asp-for="ProductName" class="col-form-label"></label>
                </div>

            </div>
            <div class="col-md-5">
                <input asp-for="ProductName" class="form-control" />
            </div>
        </div>
        <span asp-validation-for="ProductName" class="text-danger"></span>



        <div class="form-group row ">
            <div class="col-md-5">
                <div class="text-right">
                    <label asp-for="CategoryId" class="col-form-label"></label>
                </div>

            </div>
            <div class="col-md-5">
                <input readonly asp-for="Category.Name" class="form-control" />
                @*<select asp-for="Product.CategoryId" id="CategoryId" asp-items="@Model.Categories.ToSelectListItem(Model.Product.CategoryId)" class="form-control"></select>*@
            </div>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>


        <div class="form-group row ">
            <div class="col-md-5">
                <div class="text-right">
                    <label asp-for="Price" class="col-form-label"></label>
                </div>

            </div>
            <div class="col-md-5">
                <input asp-for="Price" class="form-control" />
            </div>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>


        <div class="form-group row ">
            <div class="col-md-5">
                <div class="text-right">
                    <label asp-for="Image" class="col-form-label"></label>
                </div>

            </div>
            <div class="col-md-5">
                <input asp-for="Image" type="file" name="files" multiple class="form-control" />
            </div>
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>

        <div class="form-group row ">
            <div class="col-md-5">
                <div class="text-right">
                    <label asp-for="Description" class="col-form-label"></label>
                </div>

            </div>
            <div class="col-md-5">
                <textarea asp-for="Description" class="form-control" id="exampleFormControlTextarea1"></textarea>
            </div>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        @*//////////// button add product ////////////////*@
        <div style="margin:auto;padding:auto;">
            <button style="width:40%;margin:auto; justify-content: center; display: flex;" type="submit" class="btn btn-secondary">Edytuj produkt</button>
        </div>
    </div>
    @*////////////////////////////////////////////////////*@


</form>

